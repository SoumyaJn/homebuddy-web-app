    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Ubuntu", sans-serif;
      }

      html,
      body {
        height: 100%;
        width: 100%;
      }

      main {
        width: 100%;
      }

      .wrapper {
        height: 100%;
        width: 100%;
      }

      .logo {
        width: 45px;
        border-radius: 10%;
        margin-right: 5px;
      }

      .hero-sec {
        height: 100%;
        width: 100%;
      }

      .hero-sec-img {
        width: 100%;
        object-fit: cover;
        object-position: center;
      }

      .sub-head {
        text-align: center;
        padding: 2vw 0;
      }

      .service-ctn {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2vw;
        padding: 1vw;
        flex-wrap: wrap;
      }

      .service-ctn > a {
        text-decoration: none;
        color: black;
        border: 2px solid rgba(128, 128, 128, 0.1);
      }

      .service {
        height: 240px;
        width: 285px;
        background-color: white;
      }

      .img-card {
        height: 80%;
        width: 100%;
        /* background-color: aqua; */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px,
          rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
      }

      .img-card > img {
        width: 105%;
        transition: cubic-bezier(0.19, 1, 0.22, 1) 1s;
      }

      .img-card:hover .image {
        scale: 1.2;
      }

      .service-title {
        height: 20%;
        width: 100%;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .workflow-ctn {
        padding: 20px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .workflow-ctn-img {
        width: 60%;
        object-fit: cover;
        object-position: center;
      }

      .working-ctn {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: red;
      }

      .working-ctn-img {
        width: 100%;
        object-fit: cover;
        object-position: center;
      }

      .joboy-ctn {
        background-color: #fafafa;
        display: flex;
        padding: 40px;
        gap: 25px;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }

      .joboy-ctn > h1 {
        font-size: 22px;
        padding: 5px;
      }

      .card-ctn {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 20px;
      }

      .card {
        width: 180px;
        height: 180px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-direction: column;
        flex-shrink: 0;
        border: none;
        border-radius: 0;
        overflow: hidden;
      }

      .card-img-ctn {
        height: 80%;
        width: 80%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
      }

      .card-img-ctn > img {
        height: 40%;
        width: 40%;
        object-fit: contain;
      }

      .circle-ctn {
        height: 100%;
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        animation: anim 10s linear infinite both;
      }

      @keyframes anim {
        to {
          transform: rotate(360deg);
        }
      }

      .circle_1 {
        height: 65px;
        width: 65px;
        border-radius: 50%;
        background-color: rgba(128, 128, 128, 0.1);
      }

      .circle_2 {
        height: 40px;
        width: 40px;
        border-radius: 50%;
        background-color: rgba(128, 128, 128, 0.1);
      }

      .card-text {
        font-weight: bolder;
        font-size: 15px;
        width: 100%;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        height: 20%;
      }

      footer {
        padding: 50px 0;
        display: flex;
        align-items: baseline;
        justify-content: space-around;
        flex-wrap: wrap;
      }

      footer > .middle > ul {
        list-style: none;
        text-decoration: none;
        padding: 0;
        margin: 0;
      }

      footer > .middle > ul > li {
        margin: 10px 0;
      }

      footer > .middle > ul > li > a {
        color: black;
        text-decoration: none;
      }

      @media (max-width: 400px) {
        footer {
          padding: 20px;
          display: flex;
          align-items: center;
          gap: 20px;
          justify-content: flex-start;
          flex-wrap: wrap;
        }
      }
    </style>
  </head>
